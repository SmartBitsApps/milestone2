<div class="bigbox">
  <div class="box">
    <table class="table-minimal">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


  

<div class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list">
					<thead>
						<tr>
							<th><span>Uživatel</span></th>
							<th><span>Registrace</span></th>
							<th class="text-center"><span>Status</span></th>
							<th><span>Email</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
					  <% for user in @users  %>
						  <tr>
						  	<td>
						  	  
						  	  <% if !user.avatar.file.nil? %>
            			  <%= image_tag(user.avatar.url(:medium), alt: "Profile Picture", class: 'center') %>
            			  <!-- TODO ad else and default avatar -->
            	    <% end %>
                  <%= link_to (user.first_name + ' ' + user.last_name), edit_user_path(user) %>
						  		<span class="user-subhead"><%= user.role %></span>
						  	</td>
						  	<td>
						  		<%= user.created_at.strftime("%H:%Mh - %d.%m.%Y") %>
						  	</td>
						  	
						  	<% if user.status == "registered" %>
						  	  <td class="text-center">
						  		  <span class="label label-success">registrován</span>
						  	  </td>
						  	<% elsif user.status.nil? %>
						  	  <td class="text-center">
						  		  <span class="label label-danger">nepotvrzen</span>
						  	  </td>
						  	<% end %>
						  	<td>
						  		<%= user.email %>
						  	</td>
						  	<td style="width: 20%;">
						  		<%= link_to user_path(user), :class => "table-link" do %>
						  			<span class="fa-stack">
						  				<i class="fa fa-square fa-stack-2x"></i>
						  				<i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
						  			</span>
						  		<% end %>
						  		<%= link_to edit_user_path(user), :class => "table-link" do %>
						  			<span class="fa-stack">
						  				<i class="fa fa-square fa-stack-2x"></i>
						  				<i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
						  			</span>
						  		<% end %>
						  		<% if user == current_user %>
						  		<% else %>
						  		  <%= link_to(user_path(user), :class => "table-link danger", :data => { :confirm => "Jste si jisti?" }, :method => :delete) do %>
						  		    <span class="fa-stack">
						  			  	<i class="fa fa-square fa-stack-2x"></i>
						  			  	<i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
						  			  </span>
						  		  <% end %>
						  		<% end %>
						  		
						  			
						  	</td>
						  </tr>
					  <% end %> 	
					</tbody>
				</table>
			</div>
			<ul class="pagination pull-right">
				<li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
				<li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
			</ul>
		</div>
	</div>
</div>
</div>
</div>