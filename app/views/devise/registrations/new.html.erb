<div class="form-wrapper">
  <div class="form-login col-md-4 col-md-offset-4">
    <h2>Registrace do systému</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-inputs">
        <br><hr>
        <%= f.input :email, required: true, :label => "Email" %>
        <%= f.input :password, required: true, :label => "Heslo", hint: ("#{@minimum_password_length} znaků je minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Vstoupit" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>