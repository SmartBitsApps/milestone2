<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :logo %>
    <%= f.input :company_name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :vat_id %>
    <%= f.input :contact_person %>
    <%= f.input :visible %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
